{
    "name": "php-vcr/php-vcr",
    "description": "Record your test suite's HTTP interactions and replay them during future test runs for fast, deterministic, accurate tests.",
    "license": "MIT",

    "authors": [
        {
            "name": "Adrian Philipp",
            "email": "mail@adrian-philipp.com"
        }
    ],

    "require": {
        "ext-curl": "*",
        "beberlei/assert": "^2.0",
        "symfony/yaml": "~2.1|^3.0",
        "symfony/event-dispatcher": "^2.4|^3.0"
    },

    "require-dev": {
        "phpunit/phpunit": "^4.7",
        "mikey179/vfsStream": "^1.2",
        "lapistano/proxy-object": "^2.1"
    },

    "autoload": {
        "classmap": ["src/"]
    },
    "extra": {
        "branch-alias": {
            "dev-master": "1.2.x-dev"
        }
    }
}
